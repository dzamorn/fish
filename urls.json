{
    "/": "main/index",
    "/auth-redirect/": "main/auth-redirect",
    
    "/auth/ : auth": {
        "/login/": "login",
        "/logout/": "logout",
        "/register/ : register": {
            "/": "index",
            "/success/": "success",
            "/confirm/": "confirm"
        },
        "/confirm/ : confirm": {
            "/": "index",
            "/error/": "error",
            "/success/": "success"
        },
        "/restore/ : restore": {
            "/": "index",
            "/sended/": "sended"
        }
    },
    
    "/reviews/": "reviews",
    
    "/search/": "search",
    
    "/restore/ : restore": {
        "/": "index",
        "/sended/": "sended",
        "/fail/": "fail",
        "/success/": "success"
    },
    
    "/catalog/ : catalog": {
        "/": "index",
        "/section/#{id}/": "section",
        "/offer/#{id}/": "offer"
    },
    
    "/cart/ : cart": {
        "/": "index",
        "/contacts/": "contacts",
        "/confirm/": "confirm",
        "/success/": "success"
    },
    
    "/profile/ : profile": {
        "/": "index",
        "/personal/": "personal",
        "/password/": "password",
        "/orders/": "orders",
        "/orders/#{id}/": "orders/order"
    },
    
    "/panel/ : panel": {
        "/": "index",
        
        "/options/": "options",
        
        "/users/ : users": {
            "/": "index",
            "/${id}/": "user",
            "/${id}/remove/": "remove"
        },
        
        "/menu/ : menu": {
            "/": "index",
            "/add/": "add",
            "/${id}/remove/": "remove",
            "/${id}/edit/": "edit"
        },
        
        "/second/ : second": {
            "/": "index",
            "/add/": "add",
            "/${id}/remove/": "remove",
            "/${id}/edit/": "edit"
        },
        
        "/orders/ : orders": {
            "/": "index",
            "/${id}/": "order",
            "/${id}/remove/": "remove"
        },
        
        "/news/ : news": {
            "/": "index",
            "/add/": "add",
            "/${id}/remove/": "remove",
            "/${id}/edit/": "edit"
        },
        
        "/sections/ : sections": {
            "/": "index",
            "/add-section/${parentId}/": "add-section",
            "/edit-section/${id}/": "edit-section",
            "/add-offer/${sectionId}/": "add-offer",
            "/edit-offer/${id}/": "edit-offer",
            "/remove-section/${id}/": "remove-section",
            "/remove-offer/${id}/": "remove-offer"
        },
        
        "/pages/ : pages": {
            "/": "index",
            "/add/": "add",
            "/${id}/remove/": "remove",
            "/${id}/edit/": "edit"
        },
        
        "/reviews/ : reviews": {
            "/": "index",
            "/${id}/accept/": "accept",
            "/${id}/decline/": "decline",
            "/${id}/remove/": "remove"
        },
        
        "/offers/ : offers": {
            "/${id}/tomain/": "tomain",
            "/${id}/frommain/": "frommain"
        },
        
        "/meta/": "meta"
    },
    
    "*": "main/page"
}