.header-block
    padding 20px 20px
    border-bottom 1px dotted #ccc
    margin-bottom 10px
    
    overflow hidden
    
    @media(max-width: 800px)
        padding-left 0px !important
        .logo
            float none !important
        .search
            margin-left 0px !important
            margin-top 10px
    
    .logo
        float left
        width left-width
        @media(max-width: 1200px)
            width 200px
    
    .search
        position relative
        top 8px
        margin-left left-width + 50px
        border 1px solid #ddd
        border-radius 10px
        position relative
        background #fff
        @media(max-width: 1200px)
            margin-left 230px
        
        &-input
            border none
            outline none
            font-family 'Open Sans'
            font-size 16px
            border-radius 10px
            padding 10px 20px
        
        &-button
            max-width 20px
            position absolute
            right 12px
            top 11px
            opacity 0.3
            
            &:hover
                opacity 0.5