>/main/base

block title
    | Заказ ##{order.id}

block bread
    li: a(href="/profile/") Личный кабинет
    li: a(href="/profile/orders/") История заказов
    li.active Заказ ##{order.id}

block content
    h1 Заказ ##{order.id}
    h2 Детали заказа
    table.table.table-striped.contacts-table
        tr
            td Дата и время заказа:
            td= order.date
        tr
            td Сумма заказа:
            td #{order.total} #{order.total.rub()}
        tr
            td Количество товаров:
            td #{order.count}
        tr
            td Статус:
            td= order.status || 'Обрабатывается'
    h2 Заказанные товары
    table.table.table-striped
        thead
            tr
                th Артикул
                th Наименование
                th Цена
                th Количество
                th Сумма
        tbody
            - total = 0
            for offer in order.offers
                - total += offer.price * offer.count
                tr
                    td= offer.id
                    td
                        a(href="/catalog/offer/#{offer.id}/" target="_blank")= offer.title
                    td #{offer.price} #{offer.price.rub()}
                    td= offer.count
                    td #{offer.price * offer.count} #{(offer.price * offer.count).rub()}
            tr
                th(colspan=4) Итого:
                th #{total} #{total.rub()}